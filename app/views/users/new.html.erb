<% provide(:title, 'Join') %>

<h1>Join now to begin journaling</h1>
<%= form_for @user do |f| %>
  
  <p>
  <%= f.label :username %>
  <%= f.text_field :username, :value => RandomUsername.username %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </p>
<% end %>