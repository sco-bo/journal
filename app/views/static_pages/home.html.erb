
<p><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></p>

<div id="container">
  <div id="left-div">
    <div id="table-header">
      <div id="entries">
        <strong>Entries</strong>
      </div>
        <%= link_to new_post_path do %>
          <div id="new-entry">New Entry</div>
        <% end %>
    </div>
      <div id="posts-feed">
        <% @posts.each do |post| %>
            <%= link_to post_path(post) do %>
              <div id="post-body"><%= truncate(post.decrypt) %></div>
            <% end %>
        <% end %>
      </div>

  </div>
  <div id="right-div">
    <% @activities.each do |activity| %>
      <div id="activity-feed-body">
        <% case activity.key %>
        <% when  "post.create" %>
          <i class="fi-pencil"></i>
        <% when "post.destroy" %>
          <i class="fi-trash"></i>
        <% when "post.edit" %>
          <i class="fi-clipboard"></i>
        <% else %>
          <i class="fi-power"></i>
        <% end %>
        <div id="feed-message">
          <%= link_to activity.owner.username, activity.owner if activity.owner %>
          <%= render_activity activity %>
        </div>
    </div>
    <% end %>
  </div>
</div>
